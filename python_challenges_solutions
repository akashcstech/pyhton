Challenge 1 -solution
def separator():
        letter_list = []
        number_list = []
        other_list = []
        for x in txt:
                if x.isalpha():
                        letter_list.append(x)
                elif x.isdigit(): 
                        number_list.append(x)
                else:
                        other_list.append(x)
                
        print(letter_list)
        print(number_list)
        print(other_list)
          

txt = input()
output = separator()
print(output)
